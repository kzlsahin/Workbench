<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvalonCrypter.Views.PasswordForm"
        Title="PasswordForm">
	<StackPanel Margin="5,0,5,0">
		<Label x:Name="lblPassword" Content="Enter Password" Margin="0,12,0,4"/>
		<TextBox x:Name="txtPassword"  Margin="6,0,6,0" Padding="3,2,3,2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" LostFocus="txtPassword_LostFocus" PasswordChar="*" />
		<Label x:Name="lblRewrite" Content="Rewrite your password" Margin="0,12,0,4"/>
		<TextBox x:Name="txtPassword2"  Margin="6,0,6,0" Padding="3,2,3,2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" PasswordChar="*"/>
		<Label x:Name="lblStatus" Content="" Foreground="#FF9A1E1E"/>
		<Button x:Name="btnSubmit" Content="Submit" Padding="12,5,12,5" VerticalAlignment="Top" HorizontalAlignment="Center" Click="btnSubmit_Click" Margin="0,3,0,10"/>
	</StackPanel>
</Window>
